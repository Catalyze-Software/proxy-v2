{
  "canisters": {
    "proxy": {
      "type": "custom",
      "package": "proxy",
      "candid": "candid/proxy.did",
      "wasm": "wasm/proxy.wasm.gz",
      "build": [
        "bash scripts/build.sh"
      ]
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8080",
      "type": "ephemeral",
      "replica": {
        "subnet_type": "system"
      }
    },
    "ic": {
      "providers": [
        "https://icp0.io"
      ],
      "type": "persistent"
    }
  }
}